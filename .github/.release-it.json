{
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "ignoreVersion": true,
    "publish": false
  },
  "git": {
    "requireCleanWorkingDir": false,
    "addUntrackedFiles": true,
    "tagName": "v${version}"
  },
  "hooks": {
    "before:init": [
      "git config --global user.email \"pipeline@github.com\"; git config --global user.name \"Github pipeline\""
    ]
  }
}
